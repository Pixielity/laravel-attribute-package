{
  "name": "pixielity/laravel-attribute-collector",
  "description": "A Laravel package that leverages composer-attribute-collector for attribute-based functionality. Enables developers to use PHP 8+ attributes to define routes, event listeners, scheduled jobs, and middleware directly in their code, which are then automatically registered with Laravel's systems during application bootstrap.",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "laravel",
    "attributes",
    "php8",
    "composer-plugin",
    "route-attributes",
    "event-listeners",
    "scheduled-jobs",
    "middleware",
    "zero-runtime-cost",
    "performance"
  ],
  "homepage": "https://github.com/pixielity/laravel-attribute-collector",
  "support": {
    "issues": "https://github.com/pixielity/laravel-attribute-collector/issues",
    "source": "https://github.com/pixielity/laravel-attribute-collector"
  },
  "authors": [
    {
      "name": "Abdelrhman Kouta",
      "email": "pixielity@outlook.com.com",
      "homepage": "https://github.com/pixielity",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.2",
    "illuminate/support": "^12.0",
    "illuminate/console": "^12.0",
    "illuminate/container": "^12.0",
    "illuminate/routing": "^12.0",
    "illuminate/events": "^12.0",
    "illuminate/cache": "^12.0",
    "olvlvl/composer-attribute-collector": "^2.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "laravel/pint": "^1.24",
    "nunomaduro/collision": "^8.0",
    "orchestra/testbench": "^10.0",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan": "^1.0",
    "phpstan/phpstan-deprecation-rules": "^1.0",
    "phpstan/phpstan-phpunit": "^1.0",
    "phpunit/phpunit": "^10.0|^11.0",
    "rector/rector": "^1.0",
    "roave/security-advisories": "dev-latest",
    "spatie/laravel-ray": "^1.0",
    "symfony/var-dumper": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "Pixielity\\LaravelAttributeCollector\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pixielity\\LaravelAttributeCollector\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "@php artisan package:discover --ansi || true"
    ],
    "analyse": "php -d memory_limit=512M vendor/bin/phpstan analyse --ansi",
    "analyse-max": "vendor/bin/phpstan analyse --level=max --ansi",
    "analyse-src": "vendor/bin/phpstan analyse src --level=5 --ansi",
    "analyse-tests": "vendor/bin/phpstan analyse tests --level=5 --ansi",
    "baseline": "vendor/bin/phpstan analyse --generate-baseline",
    "build": [
      "@check-composer",
      "@refresh-attributes",
      "@format",
      "@analyse",
      "@test"
    ],
    "check-security": "composer audit",
    "check-style": "vendor/bin/php-cs-fixer fix --dry-run --diff --ansi",
    "check-style-pint": "vendor/bin/pint --test --ansi",
    "clean": "rm -rf build coverage vendor .phpunit.result.cache",
    "fix-style": "vendor/bin/php-cs-fixer fix --ansi",
    "format": "vendor/bin/pint --ansi",
    "format-check": "vendor/bin/pint --test --ansi",
    "install-dev": "composer install --dev --prefer-dist --optimize-autoloader",
    "normalize": "composer normalize --ansi",
    "check-outdated": "composer outdated --direct --ansi",
    "rector": "vendor/bin/rector process --dry-run --ansi",
    "rector-fix": "vendor/bin/rector process --ansi",
    "refresh-attributes": [
      "composer dump-autoload --optimize --ansi",
      "@php -r \"echo 'Attributes refreshed successfully!' . PHP_EOL;\""
    ],
    "setup": [
      "@install-dev",
      "@refresh-attributes"
    ],
    "test": "vendor/bin/phpunit --testdox",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage --coverage-clover coverage.xml",
    "test-coverage-text": "vendor/bin/phpunit --coverage-text",
    "test-filter": "vendor/bin/phpunit --filter",
    "test-unit": "vendor/bin/phpunit --testsuite=Unit --testdox",
    "test-feature": "vendor/bin/phpunit --testsuite=Feature --testdox",
    "update-dev": "composer update --dev --prefer-dist --optimize-autoloader --ansi",
    "check-composer": "composer validate --strict --ansi",
    "version": "@php -r \"echo 'Package version: ' . json_decode(file_get_contents('composer.json'))->version . PHP_EOL;\"",
    "ci": [
      "@check-composer",
      "@check-security",
      "@analyse",
      "@format-check",
      "@test-coverage"
    ],
    "ci-github": [
      "@check-composer",
      "@analyse",
      "@format-check",
      "@test-coverage"
    ],
    "dev": [
      "@format",
      "@analyse",
      "@test"
    ],
    "qa": [
      "@check-composer",
      "@analyse-max",
      "@rector",
      "@format-check",
      "@test-coverage-text"
    ],
    "pre-commit": [
      "@format",
      "@analyse-src",
      "@test"
    ],
    "post-merge": [
      "@refresh-attributes"
    ]
  },
  "extra": {
    "laravel": {
      "providers": [
        "Pixielity\\LaravelAttributeCollector\\LaravelAttributeCollectorServiceProvider"
      ],
      "aliases": {
        "AttributeRegistry": "Pixielity\\LaravelAttributeCollector\\Facades\\AttributeRegistry"
      }
    },
    "composer-attribute-collector": {
      "include": [
        "src",
        "app"
      ]
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "olvlvl/composer-attribute-collector": true,
      "phpstan/extension-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
